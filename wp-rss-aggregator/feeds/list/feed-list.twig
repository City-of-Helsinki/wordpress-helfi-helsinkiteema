<div class="grid entries l-up-2 rss-aggregator" start="{{ (pagination.page - 1) *  pagination.items_per_page + 1}}">
    {% set hasItems = false %}
    {% set itemsHalf = items | length / 2  %}

    <div class="grid__column">
      {% for item in items %}
        {% set hasItems = true %}
        {{ include(self.dir ~ 'feed-item.twig') }}

        {% if loop.index == itemsHalf | round %}
          </div>
          <div class="grid__column">
        {% endif %}
      {% endfor %}
    </div>
    {% if not hasItems %}
      <div class="grid__column">
        <p>{% trans "No feed items found." %}</p>
      </div>
    {% endif %}
</div>
